<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/host_background"
                android:useDefaultMargins="true">

    <com.andforce.common.view.SlidingTabLayout
        android:id="@+id/mentionSlidingTab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@color/md_actionbar_bg_color"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/mentionViewpager"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/mentionSlidingTab"/>

</RelativeLayout>